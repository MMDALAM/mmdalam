<div
  class="d-flex justify-content-between align-items-center mb-3 border-bottom-1"
>
  <h2>سفارشات</h2>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>نام و نام خانوادگی</th>
        <th>موضوع</th>
        <th>متن</th>
        <th>شماره تلفن</th>
        <th>حذف</th>
      </tr>
    </thead>
    <tbody>
      <% let num = 1 %> <% posteds.docs.forEach(posted => { %>
      <tr>
        <td><%= num %></td>
        <td><%= posted.name %> <%= posted.family %></td>
        <td><%= posted.subject %></td>
        <td><%= posted.text %></td>
        <td><%= posted.tel %></td>
        <td>
          <form action="/admin/delete/<%= posted.id %>" method="post">
            <div class="btn-group btn-group-sm">
              <button type="submit" class="btn btn-danger">حذف</button>
            </div>
          </form>
        </td>
      </tr>
      <% num++ }) %>
    </tbody>
  </table>
</div>
